root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.feature]
indent_size = 2

[{*.bash, *.zsh, *.sh}]
indent_size = 2
tab_width = 2

[*.xml]
indent_size = 2

[{*.yml, *.yaml}]
indent_size = 2

[{.eslintrc, .stylelintrc, jest.config, .babelrc, bowerrc, *.json, *.jsb3, *.jsb2}]
indent_size = 2
